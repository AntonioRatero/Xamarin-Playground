<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="XFAdvThemeing.Views.ThemeSelectionPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:XFAdvThemeing.Controls;assembly=XFAdvThemeing"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:XFAdvThemeing"
    xmlns:models="clr-namespace:XFAdvThemeing.Models;assembly=XFAdvThemeing"
    Title="Change App Theme">

    <StackLayout Margin="20" VerticalOptions="CenterAndExpand">
        <controls:EnumPicker
            Title="Select Theme"
            ios:Picker.UpdateMode="WhenFinished"
            EnumType="{x:Type models:Theme}"
            SelectedIndexChanged="OnPickerSelectionChanged" />

        <Label
            x:Name="statusLabel"
            HorizontalOptions="Center"
            Style="{DynamicResource LargeLabelStyle}" />

        <Button
            x:Name="CloseButton"
            Clicked="CloseButton_Clicked"
            Style="{StaticResource ButtonStyle}"
            Text="Back" />
    </StackLayout>
</ContentPage>
