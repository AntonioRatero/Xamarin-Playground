    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:XFFillInAnswersLayout="clr-namespace:XFFillInAnswersLayout;assembly=XFFillInAnswersLayout"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
